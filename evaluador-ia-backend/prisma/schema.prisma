generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Asignatura {
  id        String   @id @default(cuid())
  codigo    String   @unique
  nombre    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 1:N con Modulo
  modulos Modulo[]
}

model Modulo {
  id        String   @id @default(cuid())
  nombre    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // FK a Asignatura (materia)
  asignaturaId String
  asignatura   Asignatura @relation(fields: [asignaturaId], references: [id])

  // 1:N con Materia (si las usas aparte)
  materias Materia[]

  // 1:N con Evaluacion (nuevo)
  evaluaciones Evaluacion[]

  @@unique([asignaturaId, nombre]) // nombre único por asignatura
  @@index([asignaturaId]) // para filtrar módulos por asignatura
}

model Materia {
  id        String   @id @default(cuid())
  nombre    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // FK a Modulo
  moduloId String
  modulo   Modulo @relation(fields: [moduloId], references: [id])

  @@index([moduloId]) // para filtrar materias por módulo
}

model Evaluacion {
  id        String   @id @default(cuid())
  titulo    String
  contenido String // JSON como string o markdown
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // FK a Modulo
  moduloId String
  modulo   Modulo @relation(fields: [moduloId], references: [id])

  @@unique([moduloId, titulo])
  @@index([moduloId])
}

// Modelo Usuario
model Usuario {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  nombre    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}